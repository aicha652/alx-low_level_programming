CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all main.o school.o clean oclean fclean re
all: main.o school.o m.h
        $(CC) main.o school.o -o $(NAME)

main.o: main.c m.h
	gcc -Wall -Werror -Wextra -pedantic -c -o $@ $<

school.o: school.c m.h
	gcc -Wall -Werror -Wextra -pedantic -c -o $@ $<

clean:
        $(RM) -f *~ $(NAME)

oclean:
        $(RM) -f *.o

fclean:clean oclean

re: oclean all
